<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_color_seventy</item>
        <item name="colorSecondaryVariant">@color/button_color_seventy</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/start_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_logo</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>

        <item name="android:windowFullscreen">true</item>

        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="editText" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/login_user_color</item>
        <item name="colorAccent">@color/start_color</item>
    </style>

    <style name="Widget.MyApp.AutoCompleteTextView.SearchView" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#5000</item>
        <item name="android:textColorPrimary">#5000</item>
        <item name="android:textColorHint">#5000</item>
        <item name="iconTint">@color/black</item>
        <item name="colorOnPrimary">#5000</item>
        <item name="colorOnSecondary">#5000</item>
        <item name="android:textColorSecondary">#5000</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/jalnan</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>